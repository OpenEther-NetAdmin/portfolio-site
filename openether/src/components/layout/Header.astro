---
import Logo from '../icons/Logo.astro';
---

<header class="sticky top-0 z-50 bg-background/80 backdrop-blur border-b border-border">
  <div class="container mx-auto px-4 h-16 flex items-center justify-between max-w-6xl">
    <a href="/" class="flex items-center gap-2">
      <Logo />
      <span class="font-heading font-bold text-xl text-text">OpenEther</span>
    </a>
    
    <nav class="hidden md:flex items-center gap-6">
      <a href="/" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Home</a>
      <a href="/portfolio" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Portfolio</a>
      <a href="/tools" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Tools</a>
      <a href="/blog" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Blog</a>
      <a href="/services" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Services</a>
      <a href="/contact" class="text-textMuted hover:text-primary transition-colors text-sm font-medium">Contact</a>
    </nav>
    
    <!-- Mobile menu button - placeholder -->
    <button class="md:hidden text-textMuted" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="4" x2="20" y1="12" y2="12"></line>
        <line x1="4" x2="20" y1="6" y2="6"></line>
        <line x1="4" x2="20" y1="18" y2="18"></line>
      </svg>
    </button>
  </div>
</header>
