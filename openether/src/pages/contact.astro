---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';
import Card from '../components/common/Card.astro';
---

<Layout title="Contact">
  <Container>
    <div class="py-12">
      <h1 class="text-4xl font-heading font-bold mb-4 text-text">Get in Touch</h1>
      <p class="text-xl text-textMuted mb-12">
        Have a project in mind? Let's discuss how I can help.
      </p>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <Card>
            <form 
              class="space-y-4" 
              action="https://formspree.io/f/YOUR_FORM_ID" 
              method="POST"
            >
              <div>
                <label for="name" class="block text-sm font-medium mb-2 text-text">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium mb-2 text-text">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium mb-2 text-text">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full bg-primary text-background py-2 px-4 rounded-lg font-medium hover:bg-primaryHover transition-colors"
              >
                Send Message
              </button>
            </form>
          </Card>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-heading font-bold mb-6 text-text">Other Ways to Connect</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-medium mb-2 text-text">Email</h3>
              <a href="mailto:your@email.com" class="text-primary hover:underline">
                your@email.com
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">LinkedIn</h3>
              <a href="#" class="text-primary hover:underline">
                linkedin.com/in/yourprofile
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">GitHub</h3>
              <a href="#" class="text-primary hover:underline">
                github.com/yourusername
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
