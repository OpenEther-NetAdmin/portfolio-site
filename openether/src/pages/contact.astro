---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';
import Card from '../components/common/Card.astro';

const FORMSPREE_ID = import.meta.env.PUBLIC_FORMSPREE_ID || 'xpqjjybz';
const formspreeUrl = `https://formspree.io/f/${FORMSPREE_ID}`;

// Warn if environment variable is not set (development only)
if (import.meta.env.DEV && !import.meta.env.PUBLIC_FORMSPREE_ID) {
  console.warn('PUBLIC_FORMSPREE_ID not set in environment. Using default ID.');
}
---

<Layout title="Contact">
  <Container>
    <div class="py-12">
      <h1 class="text-4xl font-heading font-bold mb-4 text-text">Get in Touch</h1>
      <p class="text-xl text-textMuted mb-12">
        Have a project in mind? Let's discuss how I can help.
      </p>
      
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <Card>
            <form 
              class="space-y-4" 
              action={formspreeUrl} 
              method="POST"
            >
              <div>
                <label for="name" class="block text-sm font-medium mb-2 text-text">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium mb-2 text-text">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                />
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium mb-2 text-text">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-2 bg-background border border-border rounded-lg focus:outline-none focus:border-primary text-text"
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full bg-primary text-background py-2 px-4 rounded-lg font-medium hover:bg-primaryHover transition-colors"
              >
                Send Message
              </button>
            </form>
            
            <script>
              // Client-side validation
              const form = document.querySelector('form');
              form.addEventListener('submit', (e) => {
                const email = form.querySelector('#email').value;
                const message = form.querySelector('#message').value.trim();
                
                // Email validation
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(email)) {
                  alert('Please enter a valid email address');
                  e.preventDefault();
                  return;
                }
                
                // Message length validation
                if (message.length > 5000) {
                  alert('Message is too long. Please limit to 5000 characters');
                  e.preventDefault();
                  return;
                }
                
                // Sanitize message input
                const messageInput = form.querySelector('#message');
                messageInput.value = message.replace(/[<>]/g, '');
              });
            </script>
          </Card>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-heading font-bold mb-6 text-text">Other Ways to Connect</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-medium mb-2 text-text">Email</h3>
              <a href="mailto:chris.cline@openether.net" class="text-primary hover:underline">
                chris.cline@openether.net
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">LinkedIn</h3>
              <a href="https://www.linkedin.com/in/ccline2/" class="text-primary hover:underline" target="_blank" rel="noopener noreferrer">
                linkedin.com/in/ccline2
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">Location</h3>
              <p class="text-textMuted">
                St. Petersburg, FL
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
