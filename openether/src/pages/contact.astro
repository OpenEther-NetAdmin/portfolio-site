---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';
import Card from '../components/common/Card.astro';

const FORMSPREE_ID = import.meta.env.PUBLIC_FORMSPREE_ID || 'xpqjjybz';
const formspreeUrl = `https://formspree.io/f/${FORMSPREE_ID}`;

// Warn if environment variable is not set (development only)
if (import.meta.env.DEV && !import.meta.env.PUBLIC_FORMSPREE_ID) {
  console.warn('PUBLIC_FORMSPREE_ID not set in environment. Using default ID.');
}
---

<Layout title="Contact">
  <Container>
    <div class="py-24">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-primary/20 bg-primary/5 text-primary text-xs font-mono mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        SECURE LINK: ESTABLISHING...
      </div>
      <h1 class="text-5xl md:text-7xl font-heading font-bold mb-4 text-text tracking-tight">Get in Touch</h1>
      <p class="text-xl text-textMuted mb-16 font-light max-w-2xl leading-relaxed">
        Initiate a secure communication channel to discuss your network security 
        requirements and architectural challenges.
      </p>
      
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <Card>
            <form 
              class="space-y-6" 
              action={formspreeUrl} 
              method="POST"
            >
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-xs font-mono uppercase tracking-widest mb-3 text-primary/60">Full Name</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    placeholder="OPERATOR NAME"
                    class="w-full px-4 py-3 bg-background border border-white/10 rounded-lg focus:outline-none focus:border-primary/50 text-text font-mono text-sm placeholder:text-white/10"
                  />
                </div>
                
                <div>
                  <label for="email" class="block text-xs font-mono uppercase tracking-widest mb-3 text-primary/60">Return Address</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder="EMAIL@PROTO.COL"
                    class="w-full px-4 py-3 bg-background border border-white/10 rounded-lg focus:outline-none focus:border-primary/50 text-text font-mono text-sm placeholder:text-white/10"
                  />
                </div>
              </div>
              
              <div>
                <label for="message" class="block text-xs font-mono uppercase tracking-widest mb-3 text-primary/60">Transmission Payload</label>
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  placeholder="ENTER SECURE MESSAGE..."
                  class="w-full px-4 py-3 bg-background border border-white/10 rounded-lg focus:outline-none focus:border-primary/50 text-text font-mono text-sm placeholder:text-white/10 resize-none"
                ></textarea>
              </div>
              
              <button
                type="submit"
                class="w-full bg-primary text-background py-4 px-6 rounded-lg font-bold hover:bg-primaryHover transition-all hover:scale-[1.01] active:scale-[0.99] uppercase tracking-widest text-sm shadow-[0_0_20px_rgba(34,197,94,0.2)]"
              >
                Execute Transmission
              </button>
            </form>
            
            <script>
              // Client-side validation
              const form = document.querySelector('form');
              if (form) {
                form.addEventListener('submit', (e) => {
                  const emailInput = form.querySelector('#email') as HTMLInputElement;
                  const messageInput = form.querySelector('#message') as HTMLTextAreaElement;
                  
                  if (!emailInput || !messageInput) return;

                  const email = emailInput.value;
                  const message = messageInput.value.trim();
                  
                  // Email validation
                  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                  if (!emailRegex.test(email)) {
                    alert('Please enter a valid email address');
                    e.preventDefault();
                    return;
                  }
                  
                  // Message length validation
                  if (message.length > 5000) {
                    alert('Message is too long. Please limit to 5000 characters');
                    e.preventDefault();
                    return;
                  }
                  
                  // Sanitize message input
                  messageInput.value = message.replace(/[<>]/g, '');
                });
              }
            </script>
          </Card>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-heading font-bold mb-6 text-text">Other Ways to Connect</h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-medium mb-2 text-text">Email</h3>
              <a href="mailto:chris.cline@openether.net" class="text-primary hover:underline">
                chris.cline@openether.net
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">LinkedIn</h3>
              <a href="https://www.linkedin.com/in/ccline2/" class="text-primary hover:underline" target="_blank" rel="noopener noreferrer">
                linkedin.com/in/ccline2
              </a>
            </div>
            
            <div>
              <h3 class="font-medium mb-2 text-text">Location</h3>
              <p class="text-textMuted">
                St. Petersburg, FL
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
