---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import Card from '../../components/common/Card.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog">
  <Container>
    <section class="py-24 relative overflow-hidden">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-primary/20 bg-primary/5 text-primary text-xs font-mono mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        TRANSMISSION FEED: ONLINE
      </div>
      <h1 class="text-5xl md:text-7xl font-heading font-bold mb-6 text-text tracking-tight">Technical Log</h1>
      <p class="text-xl text-textMuted max-w-2xl font-light leading-relaxed">
        Dispatches on network security architecture, adversarial research, and 
        operational automation.
      </p>
    </section>
    
    {posts.length === 0 ? (
      <div class="py-12 border-t border-white/5">
        <p class="text-textMuted font-mono text-sm">// NO ACTIVE TRANSMISSIONS FOUND.</p>
      </div>
    ) : (
      <div class="grid gap-8 py-12 border-t border-white/5">
        {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="block group">
            <Card hover={true}>
              <div class="flex justify-between items-start mb-4">
                <h2 class="text-2xl font-bold text-text group-hover:text-primary transition-colors">{post.data.title}</h2>
                <time class="text-xs text-textMuted font-mono uppercase">
                  {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' })}
                </time>
              </div>
              <p class="text-textMuted mb-6 leading-relaxed max-w-3xl">{post.data.description}</p>
              
              <div class="flex justify-between items-center">
                {post.data.tags.length > 0 && (
                  <div class="flex gap-3">
                    {post.data.tags.map((tag) => (
                      <span class="text-[10px] font-mono text-primary/60 border border-primary/20 px-2 py-0.5 rounded bg-primary/5 uppercase">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
                <span class="text-primary font-mono text-xs opacity-0 group-hover:opacity-100 transition-opacity">
                  READ_LOG_DATA ->
                </span>
              </div>
            </Card>
          </a>
        ))}
      </div>
    )}
  </Container>
</Layout>
