---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const { title, description, pubDate, tags } = post.data;
---

<Layout title={title} description={description}>
  <Container>
    <article class="py-12 max-w-3xl mx-auto">
      <header class="mb-8">
        <a href="/blog" class="text-primary hover:underline text-sm mb-4 inline-block">‚Üê Back to Blog</a>
        <h1 class="text-4xl font-heading font-bold mb-4 text-text">{title}</h1>
        <time class="text-textMuted">
          {pubDate.toLocaleDateString('en-US', { dateStyle: 'long' })}
        </time>
        {tags.length > 0 && (
          <div class="flex gap-2 mt-4">
            {tags.map((tag) => (
              <span class="text-sm text-primary">#{tag}</span>
            ))}
          </div>
        )}
      </header>
      
      <div class="prose prose-invert max-w-none prose-headings:text-text prose-p:text-textMuted prose-a:text-primary">
        <Content />
      </div>
    </article>
  </Container>
</Layout>
