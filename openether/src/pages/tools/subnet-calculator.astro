---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import { SubnetCalculatorApp } from '../../components/tools/subnet';
---

<Layout title="Subnet Calculator | OpenEther">
  <Container>
    <div class="py-12">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-slate-100 mb-4">IPv4 Subnet Calculator</h1>
        <p class="text-slate-400 text-lg">
          Calculate network addresses, broadcast addresses, usable host ranges, and visualize
          binary representations of IPv4 subnets.
        </p>
      </div>
      
      <SubnetCalculatorApp client:load />
      
      <div class="mt-8 p-6 bg-slate-800/50 rounded-lg border border-slate-700">
        <h2 class="text-lg font-semibold text-slate-100 mb-3">How to Use</h2>
        <ul class="text-slate-400 space-y-2">
          <li>• Enter an IPv4 address (e.g., 192.168.1.0)</li>
          <li>• Adjust the CIDR prefix using the slider or input field</li>
          <li>• Click "Calculate" to see network information</li>
          <li>• The binary visualization shows network bits (cyan) vs host bits (gray)</li>
        </ul>
      </div>
    </div>
  </Container>
</Layout>
