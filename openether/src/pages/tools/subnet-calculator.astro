---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import { SubnetCalculatorApp } from '../../components/tools/subnet';
---

<Layout title="Subnet Calculator | OpenEther">
  <Container>
    <div class="py-12">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-text mb-4">IPv4 Subnet Calculator</h1>
        <p class="text-textMuted text-lg font-light">
          Calculate network addresses, broadcast addresses, usable host ranges, and visualize
          binary representations of IPv4 subnets.
        </p>
      </div>
      
      <SubnetCalculatorApp client:load />
      
      <div class="mt-8 p-6 bg-surface rounded-xl border border-white/5">
        <h2 class="text-lg font-semibold text-text mb-3 font-mono text-primary flex items-center gap-2">
          <span class="w-1.5 h-1.5 bg-primary rounded-full"></span>
          HOW TO USE
        </h2>
        <ul class="text-textMuted space-y-2 text-sm">
          <li>• Enter an IPv4 address (e.g., 192.168.1.0)</li>
          <li>• Adjust the CIDR prefix using the slider or input field</li>
          <li>• Click "Calculate" to see network information</li>
          <li>• The binary visualization shows network bits (neon green) vs host bits (gray)</li>
        </ul>
      </div>
    </div>
  </Container>
</Layout>
